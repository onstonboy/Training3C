<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="listUserFragment"
            type="com.example.administrator.training3c_27112017.ListUserFragment"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/listUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/list_user"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_40"
            />
        <EditText
            android:id="@+id/idEditText"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listUserTextView"
            android:text="@={listUserFragment.mID}"
            />
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listUserTextView"
            android:layout_toRightOf="@+id/idEditText"
            android:text="@={listUserFragment.mUserName}"
            />
        <Button
            android:id="@+id/insertUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nameEditText"
            android:layout_toRightOf="@+id/nameEditText"
            android:text="@string/insert"
            android:onClick="@{listUserFragment::onClickInsertButton}"

            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listUserRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_below="@+id/nameEditText"
            />

        <Button
            android:id="@+id/verticalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listUserRecyclerView"
            android:layout_marginLeft="@dimen/dp_40"
            android:text="@string/vertical"
            android:onClick="@{listUserFragment::onClickVerticalButton}"
            />
        <Button
            android:id="@+id/horizontalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/verticalButton"
            android:layout_toRightOf="@+id/verticalButton"
            android:text="@string/horizontal"
            android:onClick="@{listUserFragment::onClickHorizontalButton}"
            />
        <Button
            android:id="@+id/gridButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/horizontalButton"
            android:layout_toRightOf="@+id/horizontalButton"
            android:text="@string/grid"
            android:onClick="@{listUserFragment::onClickGridButton}"
            />

    </RelativeLayout>
</layout>